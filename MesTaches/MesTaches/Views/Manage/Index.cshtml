@model MesTaches.Models.IndexViewModel
@{
    ViewBag.Title = "Gerer";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Modifier les paramètres de votre compte</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Nom:</dt>
        <dd>
             @Model.Name
        </dd>
        <dt>Login:</dt>
        <dd>
             @User.Identity.Name
        </dd>
        <dt>Mot de passe:</dt>
        <dd>
            
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Modifiez votre mot de passe", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Créer", "SetPassword")
            }
            
        </dd>
 
    </dl>
    
</div>
